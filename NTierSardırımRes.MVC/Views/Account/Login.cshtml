@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-4 mx-auto">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Giriş Yap</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email adresi girin">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <div class="input-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi girin">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <input type="checkbox" id="showPassword"> <!-- checkbox for show password -->
                                <span>Şifreyi Göster</span> <!-- text for show password checkbox -->
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Beni Hatırla</label>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Giriş Yap</button>
                <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-link">Şifremi Unuttum</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('showPassword').addEventListener('change', function () {
            var passwordInput = document.getElementById('Password');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }
        });
    </script>
}


