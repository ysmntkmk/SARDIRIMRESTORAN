@model ProductDeleteVM
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Product/Index.cshtml";
}


<h1>Delete Product</h1>

<h4>Are you sure you want to delete this product?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Model.ProductName
        </dd>
        <dt class="col-sm-2">
            Unit Price
        </dt>
        <dd class="col-sm-10">
            @Model.UnitPrice
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>


