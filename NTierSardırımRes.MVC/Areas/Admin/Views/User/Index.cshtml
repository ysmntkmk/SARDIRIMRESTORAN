@model List<AppUserVM>

@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="alert">
    @if (TempData["Result"] != null)
    {
        <span>@TempData["Result"]</span>
    }
</div>

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h2>@ViewData["Title"]</h2>
            <a asp-controller="User" asp-action="Create" class="btn btn-success">Kullanıcı Ekle</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>Roller</th>
                    <th>Telefon No</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>
                            @string.Join(", ", item.Roles)
                        </td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detay</a>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
