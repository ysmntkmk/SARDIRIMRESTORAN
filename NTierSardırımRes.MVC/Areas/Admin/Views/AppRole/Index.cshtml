@model List<AppRoleVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Roles</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-controller="AppRole" asp-action="Update" asp-route-id="@role.Id" class="btn btn-primary">Update</a>
                </td>
                <td>
                    <a asp-controller="AppRole" asp-action="AssignRole" asp-route-id="@role.Id" class="btn btn-danger">AssingnRole</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create</a>
