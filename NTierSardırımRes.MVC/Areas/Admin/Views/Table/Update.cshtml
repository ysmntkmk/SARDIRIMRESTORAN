@model TableUpdateVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Update" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Available"></label>
        <input asp-for="Available" class="form-control" />
        <span asp-validation-for="Available" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TableNo"></label>
        <input asp-for="TableNo" class="form-control" />
        <span asp-validation-for="TableNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AppUserID"></label>
        <input asp-for="AppUserID" class="form-control" />
        <span asp-validation-for="AppUserID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

