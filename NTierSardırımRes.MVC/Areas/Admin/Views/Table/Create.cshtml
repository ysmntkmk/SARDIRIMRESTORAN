@model TableCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="Available" class="control-label">Availability</label>
        <div>
            <div class="form-check">
                <input asp-for="Available" class="form-check-input" type="radio" value="true" id="availableTrue" />
                <label class="form-check-label" for="availableTrue">True</label>
            </div>
            <div class="form-check">
                <input asp-for="Available" class="form-check-input" type="radio" value="false" id="availableFalse" />
                <label class="form-check-label" for="availableFalse">False</label>
            </div>
        </div>
        <span asp-validation-for="Available" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TableNo"></label>
        <input asp-for="TableNo" class="form-control" />
        <span asp-validation-for="TableNo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AppUserID"></label>
        <input asp-for="AppUserID" class="form-control" />
        <span asp-validation-for="AppUserID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

